# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application Configuration
APP_NAME=reciprocity-platform
APP_VERSION=1.0.0
ENVIRONMENT=production
LOG_LEVEL=INFO
PORT=8000
HOST=0.0.0.0

# CORS Configuration (update with your frontend domain)
CORS_ORIGINS=["https://your-frontend-domain.com"]
ALLOWED_HOSTS=["your-api-domain.com"]

# Database Configuration
REDIS_URL=redis://your-redis-host:6379/0
DYNAMO_PROFILE_TABLE_NAME=user_profiles_prod
DYNAMO_MATCHES_TABLE_NAME=user_matches_prod
DYNAMO_FEEDBACK_TABLE_NAME=user_feedback_prod
DYNAMO_CHAT_TABLE_NAME=ai_chat_records_prod
DYNAMO_NOTIFIED_PAIRS_TABLE_NAME=notified_match_pairs_prod

# AWS Configuration (Production)
# IMPORTANT: Do NOT set DYNAMODB_ENDPOINT_URL in production!
# AWS credentials and region will be automatically provided by:
# - EC2 Instance Profile (recommended) - includes region
# - ECS Task Role (recommended) - includes region
# - AWS CLI profile - includes region
# - Environment variables (if needed)
# AWS_DEFAULT_REGION=us-east-1  # Optional - AWS can auto-detect region

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-production-openai-key
OPENAI_MODEL=gpt-4o-mini

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.3

# Matchmaking Configuration
MAX_MATCHES_PER_CYCLE=10
SCHEDULED_RECALCULATE_MATCHES=true
SIMILARITY_UPPER_THRESHOLD=0.95

# Feedback Configuration (Point 3)
# Options: "requirements", "offerings", "both"
FEEDBACK_TARGET_PORTION=requirements

# PostgreSQL Configuration (Production)
DATABASE_URL=postgresql://user:password@your-postgres-host:5432/reciprocity_ai

# Backend Integration
RECIPROCITY_BACKEND_URL=https://your-backend-domain.com/api

# API Security Configuration
# X-API-KEY for incoming requests (protects YOUR API endpoints)
API_KEY=your-production-secret-api-key-here

# X-API-KEY for outgoing webhook requests (authenticates with external backend)
WEBHOOK_API_KEY=external-backend-production-api-key-here
